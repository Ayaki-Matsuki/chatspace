.chatspace
  .chat-main
    .chat-header
      .chat-header__left
        .chat-header__left__user
          = @group.name
        .chat-header__left__group
          Memberï¼š
          - @group.users.each do |user|
            = user.name
      .chat-header__right
        = link_to "Edit", edit_group_path(@group)
    .chat-body
      = render @messages
    .chat-footer
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'chat-footer__message', placeholder: 'type a message'
        .chat-footer__mask
          = f.label :image, class: 'chat-footer__mask__image' do
            = fa_icon 'image'
            = f.file_field :image, class: "filesend"
        = f.submit 'Send', class: "chat-footer__send"
  = render "side_bar"