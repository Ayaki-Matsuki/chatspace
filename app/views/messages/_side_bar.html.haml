.chat-side
  .chat-user
    .chat-user__name
      =current_user.name
    .chat-user__icon
      .chat-user__icon__left
        =link_to new_group_path, data:{"turbolinks" => false} do
          =fa_icon 'edit', class: 'chat-user__icon--group'
      .chat-user__icon__right
        =link_to edit_user_path(current_user) do
          =fa_icon 'cog', class: 'chat-user__icon--user'
  .chat-group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .chat-group__name
          = group.name
        .chat-group__messages
          = group.show_last_message
