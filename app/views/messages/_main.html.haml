.chat-main
  .chat-header
    .chat-header__left
      .chat-header__left__user
        name
      .chat-header__left__group
        Membersï¼šayaki kazuki
    .chat-header__right
      = link_to "Edit", edit_group_path(@group)
  .chat-body
    .view
      .chat-body__header
        .chat-body__name
          ayaki
        .chat-body__time
          2019/08/10(Fri) 19:50:59
      .chat-body__message
        Hello!
  .chat-footer
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'chat-footer__message', placeholder: 'type a message'
      .chat-footer__mask
        = f.label :image, class: 'chat-footer__mask__image' do
          = fa_icon 'image'
          = f.file_field :image, class: "filesend"
      = f.submit 'Send', class: "chat-footer__send"